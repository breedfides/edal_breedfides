<!DOCTYPE html>
<html>
	<head>
		<title>e!DAL - $entity.getVersionByDate($date).getName()</title>
		#parse("de/ipk_gatersleben/bit/bi/edal/primary_data/HeaderTemplate.xml")
	</head>
	<body>
		<div class="container-fluid">

			#parse("de/ipk_gatersleben/bit/bi/edal/primary_data/TopSectionTemplate.xml")

			<div class="content">

				#parse("de/ipk_gatersleben/bit/bi/edal/primary_data/DescriptionTemplate.xml")

				<hr style="margin:5px;" />

				<div id="ballsWaveG">
					Loading:
					<img src="$serverURL/FILEICONS/ajax-loader.gif"></img>
				</div>

				$entity.switchCurrentVersion($entity.getVersionByDate($date))$entity.getPath()

				#if($entity.getParentDirectory())

				<div style="margin-bottom:-12px">
					<ol class="tree">
						<label class="parent">
							<a style="color: #333"
								href="$serverURL/$identifierType/$internalId/$entity.getParentDirectory().getID()/$entity.getParentDirectory().getVersionByDate($date).getRevision()/$reviewerCode">Up to Parent Directory</a>
						</label>
					</ol>
				</div>
				#end

				#parse("de/ipk_gatersleben/bit/bi/edal/primary_data/TreeTemplateForReviewer.xml")

				<div id="file-content">
					<hr style="margin: 5px;" />
					<div class="row">
						<div class="col-md-12 collapse-group">
							<h4>
								<i class="fa fa-info-circle"></i>
								#set ($a= $entity)
								$a.switchCurrentVersion($entity.getVersionByDate($date))
								$a.getPath()

							</h4>
							<p>
								<a class="btn btn-default btn-sm" href="$downloadURL/$identifierType/$internalId/$entity.getID()/$entity.getVersionByDate($date).getRevision()/$reviewerCode/ZIP" target="_blank">
									<i class="fa fa-download"></i> Download as ZIP
								</a>
								<a class="btn btn2 btn-default btn-sm" href="$serverURL/$identifierType/$internalId/$entity.getID()/$entity.getVersionByDate($date).getRevision()/$reviewerCode/#">
									<i class="fa fa-forward"></i> Metadata
								</a>
							</p>
							<div class="table-responsive small collapse">
								<table class="table table-striped table-hover">
									#parse("de/ipk_gatersleben/bit/bi/edal/primary_data/MetadataDirectoryTemplate.xml")

								</table>
							</div>
						</div>
					</div>
					<hr style="margin: 5px;" />
					#parse("de/ipk_gatersleben/bit/bi/edal/primary_data/VersionInformationTemplate.xml")
				</div>
			</div>
		</div>
		<script src="$serverURL/JS/script.js"></script>
	</body>
</html>