<div class="row">
	<div class="col-md-12">
		<div class="pull-left">
			<h4>#if($entity.isDirectory())Data Directory Description
				#else Data File Description#end</h4>
		</div>
		#foreach( $element in $citation_entity.getVersionByDate($date).getPublicReferences())
				#if(! $element.getAssignedID())
					#set ($link="false")
				#else
					#set ($link="true")
					#set ($doi=$element.getAssignedID())
				#end
		#end
		#if($link =="true")
		<div class="pull-right warning" style="margin-top:8px;">please always quote when using data: 
			<strong><a href="$serverURL/$identifierType/$internalId/$citation_entity.getID()/$citation_entity.getVersionByDate($date).getRevision()/BIBTEX">[BibTeX]</a></strong>&nbsp;
			<strong><a href="$serverURL/$identifierType/$internalId/$citation_entity.getID()/$citation_entity.getVersionByDate($date).getRevision()/RIS">[RIS]</a></strong>&nbsp;
			<strong><a href="$serverURL/$identifierType/$internalId/$citation_entity.getID()/$citation_entity.getVersionByDate($date).getRevision()/RDFXML">[RDF/XML]</a></strong>&nbsp;
			<strong><a href="$serverURL/$identifierType/$internalId/$citation_entity.getID()/$citation_entity.getVersionByDate($date).getRevision()/RDFTURTLE">[RDF/Turtle]</a></strong>&nbsp;
			<strong><a href="$serverURL/$identifierType/$internalId/$citation_entity.getID()/$citation_entity.getVersionByDate($date).getRevision()/TEXT">[Text]</a></strong>&nbsp;
			<strong><a href="$serverURL/$identifierType/$internalId/$citation_entity.getID()/$citation_entity.getVersionByDate($date).getRevision()/SCHEMA">[JSON-LD]</a></strong></div>
		#end	
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<ul class="list-unstyled pad" style="margin-bottom:0px;">
			<li>
				<strong>Citation: </strong>
				#if($link=="true")
				<a target="_blank" href ="https://search.datacite.org/works/$doi">$citation_entity.getVersionByDate($date).getMetaData().toString()
					#foreach($element in $citation_entity.getVersionByDate($date).getPublicReferences())
						#if($link=="true")
							$element.getIdentifierType():$element.getAssignedID()
						#end
					#end
					 </a>
				#else
				$citation_entity.getVersionByDate($date).getMetaData().toString()
				#end
			</li>
			<li><strong>Abstract: </strong>$citation_entity.getVersionByDate($date).getMetaData().getElementValue($description)</li>
			<li><strong>License: </strong>$citation_entity.getVersionByDate($date).getMetaData().getElementValue($rights).toHTML()</li>
			#if($link=="true")
				#foreach($element in $entity.getCurrentVersion().getPublicReferences())
					<li><strong>$element.getIdentifierType(): </strong>$element.getAssignedID()</li>
				#end
			#end
		</ul>
	</div>
</div>